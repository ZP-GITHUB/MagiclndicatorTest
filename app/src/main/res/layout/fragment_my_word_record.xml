    <androidx.recyclerview.widget.RecyclerView
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:clipToPadding="false"
        android:id="@+id/listWordRecorder"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/appbarWordRecord"
        android:layout_gravity="bottom"
        android:padding="16dp"
        app:elevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            app:startIconDrawable="@drawable/ic_search_black_24dp"
            app:boxCornerRadiusBottomEnd="26dp"
            app:boxCornerRadiusTopEnd="26dp"
            app:boxCornerRadiusTopStart="26dp"
            app:boxCornerRadiusBottomStart="26dp"
            app:boxCollapsedPaddingTop="0dp"
            app:endIconMode="clear_text"
            app:hintEnabled="false"
            android:id="@+id/layoutQueryWord"
            android:hint="搜索"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/queryWord"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:hint="搜索"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>
    </com.google.android.material.bottomappbar.BottomAppBar>
